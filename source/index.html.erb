---
scripts:
  - //cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js
  - //netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js
---



<div data-sticky-container>
  <div id="sticky" class="sticky" data-sticky data-options="anchor: page; marginTop: 0; stickyOn: small;">
    <div class="row">
      <nav class="top-bar" id="main-menu">
        <div class="top-bar-left">
          <img class="logo" src="<%= image_path 'klarna-logo.png' %>"/>
        </div>
        <div class="top-bar-right">
            <ul class="menu" data-magellan data-bar-offset="56" data-animation-duration="100" data-threshold="50">
              <% data.pages.each do |page| %>
                  <% 
                    title = page.keys[0]
                    subtext = page[title]
                  %>
                  <li><a href="#<%= title.to_url %>" title="<%= subtext %>"><%= title %></a></li>
              <% end %>
            </ul>
        </div>
      </nav>
    </div>
  </div>
</div>



<% data.pages.each do |page| %>
<%
  title = page.keys[0]
  subtext = page[title]
%>
<% 
    id = title.to_url 
%>
<div id="<%= id %>" class="container"  data-magellan-target="<%= id %>">
  <%= partial "partials/#{id}", locals: { id: id, subtext: subtext, title: title } %>
</div>
<% end %>

<footer id="footer">
  <div class="container">
    <div class="row">
      <div class="small-12">
        Made with â™¥ by <img class="logo" src="<%= image_path('klarna-logo.png') %>"/><br>
      </div>
    </div>
  </div>
</footer>

